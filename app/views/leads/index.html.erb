<p id="notice"><%= notice %></p>

<h1>Pingsurance</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newLeadModal">
  <i class="fas fa-user-plus"></i> Add New Lead
</button>
<%= render "new" %>

<table class="table table-striped" style="width: 75%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Date texted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.full_name %></td>
        <td><%= lead.phone_number %></td>
        <td><%= lead.date_texted %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Remove from List', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

